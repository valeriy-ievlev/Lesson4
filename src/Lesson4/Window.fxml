<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="Lesson4.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextArea fx:id="textArea" prefWidth="550" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="textField" prefWidth="550" GridPane.rowIndex="1" GridPane.columnIndex="0" onKeyPressed="#sentMsg"/>
    <Button fx:id="btnSent" text="Отправить" onAction="#sent" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</GridPane>